# Secret Template - DO NOT COMMIT WITH REAL VALUES
# Copy this to secret.yaml and fill in your values
# The actual secret.yaml is in .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: todo-secrets
  namespace: todo-app
  labels:
    app.kubernetes.io/name: todo-app
type: Opaque
stringData:
  # Database connection string
  DATABASE_URL: "postgresql://user:password@todo-postgres:5432/todo_db"

  # Authentication secret (min 32 characters)
  BETTER_AUTH_SECRET: "your-secret-key-minimum-32-characters-long"

  # OpenAI API key for chatbot
  OPENAI_API_KEY: "sk-your-openai-api-key"

  # PostgreSQL credentials (for postgres StatefulSet)
  POSTGRES_USER: "todo"
  POSTGRES_PASSWORD: "todo_password"
  POSTGRES_DB: "todo_db"
